<%- model_class = Province -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:side_provinces) %></th>
      <th><%= model_class.human_attribute_name(:special_num) %></th>
      <th><%= model_class.human_attribute_name(:special_flat) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= link_to province.id, province_path(province) %></td>
        <td><%= province.name %></td>
        <td><%= province.side_provinces %></td>
        <td><%= province.special_num %></td>
        <td><%= province.special_flat %></td>
        <td><%=l province.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      province_path(province), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_province_path(province), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      province_path(province),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_province_path,
            :class => 'btn btn-primary' %>
