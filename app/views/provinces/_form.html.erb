<%= form_for @province, :html => { :class => "form-horizontal province" } do |f| %>

  <% if @province.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@province.errors.count, "error") %> prohibited this province from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @province.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :side_provinces, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :side_provinces, :class => 'form-control' %>
    </div>
    <%=f.error_span(:side_provinces) %>
  </div>
  <div class="form-group">
    <%= f.label :special_num, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :special_num, :class => 'form-control' %>
    </div>
    <%=f.error_span(:special_num) %>
  </div>
  <div class="form-group">
    <%= f.label :special_flat, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :special_flat, :class => 'form-control' %>
    </div>
    <%=f.error_span(:special_flat) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                provinces_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
